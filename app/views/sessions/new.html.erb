<% provide(:title, 'Sign in') %>
<%= link_to 'Danang Bus', root_path, class: 'home-title' %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path, html: { class: "sign-up"}) do |f| %>
        <%= render 'shared/error_messages' %>
        <h1 class="sign-up-title">Sign in to find bus easier</h1>
        <%= f.email_field :email, class: "sign-up-input", placeholder: :email %>
        <%= f.password_field :password, class: "sign-up-input", placeholder: :password %>
        <%= f.submit "Sign in", class: "sign-up-button" %>
    <% end %>
  </div>
</div>