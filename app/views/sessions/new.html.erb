<% provide(:title, 'Sign in') %>
<%= link_to 'Danang Bus', root_path, class: 'home-title' %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "sign-up"}) do |f| %>
        <%= render 'shared/error_messages' %>
        <h1 class="sign-up-title">Sign in to find bus easier</h1>
        <%= f.email_field :email, class: "sign-up-input", placeholder: :email, auto_focus: true %>
        <%= f.password_field :password, class: "sign-up-input", placeholder: :password, autocomplete: "off" %>
        <%= f.submit "Sign in", class: "sign-up-button" %>
    <% end %>
  </div>
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
</div>
